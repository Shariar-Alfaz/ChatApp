@model ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Info.cshtml";
}

<div class="p-5 rounded-4 bg-white shadow">
    <h1 class="headings">Reset password</h1>

    <form asp-antiforgery="true" asp-action="resetpassword" asp-controller="auth" asp-area="" method="post">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="Token" />
        <div class="mb-3">
            <label class="form-label label-custom">Password</label>
            <input type="password" class="form-control" asp-for="Password">
            <div class="text-danger">
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label label-custom">Confirm password</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword">
            <div class="text-danger">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn custom-button-color custom-button-font" style="width:150px;">Reset</button>
        </div>
    </form>
</div>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

