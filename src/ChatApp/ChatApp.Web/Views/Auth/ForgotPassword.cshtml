@model ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_Info.cshtml";
}

<div class="p-5 rounded-4 bg-white shadow">
<h1 class="headings">Forgot password</h1>

<form asp-antiforgery="true" asp-action="forgotpassword" asp-controller="auth" asp-area="" method="post">

    <div class="mb-3">
        <label class="form-label label-custom">Your email</label>
        <input type="text" class="form-control" asp-for="Email">
        <div class="text-danger">
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn custom-button-color custom-button-font" style="width:150px;">Submit</button>
    </div>
</form>
</div>

